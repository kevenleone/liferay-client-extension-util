{
    "author": {
        "email": "keven.santos.sz@gmail.com",
        "name": "Keven Leone"
    },
    "devDependencies": {
        "@release-it-plugins/workspaces": "^5.0.3",
        "release-it": "^19.0.4"
    },
    "name": "@liferay-client-extension-util",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kevenleone/liferay-client-extension-util.git"
    },
    "scripts": {
        "dev": "bun run --filter app dev",
        "build": "bun run --filter './packages/*' build",
        "release": "release-it --only-version"
    },
    "private": true,
    "release-it": {
        "plugins": {
            "@release-it-plugins/workspaces": true
        }
    },
    "workspaces": [
        "packages/*"
    ],
    "version": "1.0.0"
}
